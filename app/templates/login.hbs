<form id="loginForm" class="RefsetPanel" action="javascript:Refset.__container__.lookup('controller:login').send('loginUser')">
	
	<p>
		For access to the full range to tools you will need to login.
		You may continue as a guest to view only public refsets.
	</p>
	
	{{input value=username type="text" placeholder="Username"}}
	{{input value=password type="password" 	placeholder="Password"}}
	
	{{#if loginInProgress}}
		<div class="loading">Logging you in, please wait...</div>
		{{bs-progress progress=100 stripped=true animated=true}}
	{{/if}}
	
	{{#if loginError}}
		<div class="error">{{loginError}}</div>
	{{/if}}
	
	<button type="submit" style="display:none">Submit</button>
	
	<p class="forgetPasswordLink"><a {{bind-attr href="RefsetENV.APP.passwordResetURL"}} target="_blank">I've forgotten my password</a></p>
</form>